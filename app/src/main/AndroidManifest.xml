<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joyrasmussen.hw2_group34">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMovie" />
        <activity android:name=".MoviesByYearActivity">
            <intent-filter>
                <action android:name="com.example.joyrasmussen.hw2_group34.intent.action.VIEWBYYEAR"></action>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MoviesByRatingActivity">
            <intent-filter>
                <action android:name="com.example.joyrasmussen.hw2_group34.intent.action.VIEWBYRATING"></action>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>